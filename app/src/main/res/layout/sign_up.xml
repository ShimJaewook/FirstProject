<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="ID"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/insertID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="아이디를 입력하세요." />
        <Button
            android:id="@+id/overlapCheckBT"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="#EFEfAE"
            android:text="중복확인"/>
        <TextView
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="PASSWORD"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/insertPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="비밀번호를 입력하세요." />
        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="NAME"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/insertName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="사용자 이름을 입력하세요." />
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="ADDRESS"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/insertAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="주소를 입력하세요." />
        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="PHONE NUMBER"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/insertPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="전화번호를 입력하세요." />
        <TextView
            android:id="@+id/infoConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:text="개인정보 이용에 동의하십니까?" />
        <RadioGroup
            android:id="@+id/infoAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <RadioButton
                android:id="@+id/radioYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="예"/>
            <RadioButton
                android:id="@+id/radioNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="아니오"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_weight="12">
        <Button
            android:id="@+id/backBT"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#FAFEDA"
            android:clickable="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClicked"
            android:text="이전으로"/>
        <Button
            android:id="@+id/signupBT"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#FEAAAE"
            android:clickable="true"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:onClick="onButtonClicked"
            android:text="회원가입"/>
    </LinearLayout>
</LinearLayout>